# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# MCP Server Ports
MCP_CONTROL_MAPPER_PORT=8001
MCP_EVIDENCE_ASSESSOR_PORT=8002
MCP_GAP_ANALYZER_PORT=8003
MCP_REPORT_GENERATOR_PORT=8004
MCP_KNOWLEDGE_BASE_PORT=8005

# Application Settings
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
DATA_DIR=./data

# Auth Settings
AUTH_PROVIDER=local
AUTH_DB_PATH=./data/auth.db
AUTH_SECRET=change-me
SESSION_TTL_MINUTES=120
SESSION_IDLE_TIMEOUT_MINUTES=30
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=change-me-strong

# ChromaDB for Vector Storage
CHROMA_PERSIST_DIR=./chroma_db

# Swarms Configuration
SWARMS_LOG_LEVEL=INFO
MAX_LOOPS=5
